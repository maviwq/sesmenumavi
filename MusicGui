MusicGui.lua

-- Server & Client script tek dosyada
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")

local remote = ReplicatedStorage:FindFirstChild("PlayMusic")
if not remote then
	remote = Instance.new("RemoteEvent", ReplicatedStorage)
	remote.Name = "PlayMusic"
end

remote.OnServerEvent:Connect(function(player, action, data)
	if action == "play" and data ~= "" then
		local oldSound = workspace:FindFirstChild("CustomMusic")
		if oldSound then oldSound:Destroy() end
		local sound = Instance.new("Sound", workspace)
		sound.Name = "CustomMusic"
		sound.SoundId = "rbxassetid://" .. data
		sound.Volume = 1
		sound.Looped = true
		sound:Play()
	elseif action == "stop" then
		local oldSound = workspace:FindFirstChild("CustomMusic")
		if oldSound then oldSound:Destroy() end
	end
end)

Players.PlayerAdded:Connect(function(player)
	player.CharacterAdded:Wait()

	local guiScript = Instance.new("LocalScript")
	guiScript.Name = "MusicGuiScript"
	guiScript.Source = [[
		local remote = game:GetService("ReplicatedStorage"):WaitForChild("PlayMusic")
		local gui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))

		local xOffset = 20
		local yCenter = 0.5

		local title = Instance.new("TextLabel", gui)
		title.Size = UDim2.new(0, 200, 0, 30)
		title.Position = UDim2.new(0, xOffset, yCenter, -110)
		title.Text = "by c00lteam"
		title.Font = Enum.Font.SourceSansBold
		title.TextSize = 24
		title.TextColor3 = Color3.fromRGB(0,170,255)
		title.BackgroundTransparency = 1
		title.TextXAlignment = Enum.TextXAlignment.Left

		local inputBox = Instance.new("TextBox", gui)
		inputBox.Size = UDim2.new(0, 200, 0, 40)
		inputBox.Position = UDim2.new(0, xOffset, yCenter, -70)
		inputBox.PlaceholderText = "Müzik kodunu gir"
		inputBox.TextScaled = true
		inputBox.Font = Enum.Font.SourceSans
		inputBox.BackgroundColor3 = Color3.fromRGB(240,240,240)
		inputBox.TextColor3 = Color3.fromRGB(0,0,0)

		local playButton = Instance.new("TextButton", gui)
		playButton.Size = UDim2.new(0, 200, 0, 40)
		playButton.Position = UDim2.new(0, xOffset, yCenter, -25)
		playButton.Text = "▶️ Müziği Çal"
		playButton.TextScaled = true
		playButton.Font = Enum.Font.SourceSansBold
		playButton.BackgroundColor3 = Color3.fromRGB(100,200,100)
		playButton.TextColor3 = Color3.fromRGB(255,255,255)

		local stopButton = Instance.new("TextButton", gui)
		stopButton.Size = UDim2.new(0, 200, 0, 40)
		stopButton.Position = UDim2.new(0, xOffset, yCenter, 20)
		stopButton.Text = "⏹️ Durdur"
		stopButton.TextScaled = true
		stopButton.Font = Enum.Font.SourceSansBold
		stopButton.BackgroundColor3 = Color3.fromRGB(200,100,100)
		stopButton.TextColor3 = Color3.fromRGB(255,255,255)

		local closeButton = Instance.new("TextButton", gui)
		closeButton.Size = UDim2.new(0, 200, 0, 40)
		closeButton.Position = UDim2.new(0, xOffset, yCenter, 65)
		closeButton.Text = "❌ Kapat"
		closeButton.TextScaled = true
		closeButton.Font = Enum.Font.SourceSansBold
		closeButton.BackgroundColor3 = Color3.fromRGB(150,150,150)
		closeButton.TextColor3 = Color3.fromRGB(255,255,255)

		playButton.MouseButton1Click:Connect(function()
			if inputBox.Text ~= "" then
				remote:FireServer("play", inputBox.Text)
			end
		end)

		stopButton.MouseButton1Click:Connect(function()
			remote:FireServer("stop")
		end)

		closeButton.MouseButton1Click:Connect(function()
			gui:Destroy()
		end)
	]]

	guiScript.Parent = player:WaitForChild("PlayerGui")
end)

